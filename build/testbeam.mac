# Set some default verbose
/control/verbose 0
/control/saveHistory
/run/verbose 0
#/random/setSeeds 1001 2
#
# Change the default number of threads (in multi-threaded mode)
/run/numberOfThreads 2
#
#/run/setCut  0.01 mm
#/cuts/setLowEdge 50 eV
/penEMPhys/Ethr 500 keV
#
#
# Initialize kernel
/run/initialize
#
# Penelope source
/penSource/particle proton
/penSource/energ   2000 MeV
/penSource/posit   0.  0.  -10 cm
/penSource/cone    0.  0.  5. deg 

# Visualization setting
/run/beamOn 100
